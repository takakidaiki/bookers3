<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <%= @books.each do |books| %>
  <tbody>
    <tr>
      <td><%= books.title %></td>
      <td><%= books.body %></td>
      <td><%= link_to "Show", book_path(books.id) %></td>
      <td><%= link_to "Edit", edit_book_path(books.id) %></td>
      <td><%= link_to "Destroy", destroy_book_path(books.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<%= form_with model: @book do |book| %>
 <h6>Title</h6>
 <%= book.text_field :title %>
   
 <h6>Body</h6>
 <%= book.text_area :body %>
   
 <%= book.submit 'Create Book' %>
<% end %>
 
